{
  "name": "Youtube Comment Language Filter",
  "description": "Filter comments in your language only",
  "version": "1.0.2",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://*.youtube.com/*",
        "https://*.youtube.com/*"
      ],
      "all_frames": true,
      "js": [
        "js/bg.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "css/style.css"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "activeTab"]
}
