{
    "extends": ["eslint:recommended", "google", "prettier"],
    "plugins": ["prettier"],
    "ignorePatterns": ["build/", "*.min.js"],
    "rules": {
      "semi": ["error", "always"],
      "linebreak-style": ["error", "windows"],
      "require-jsdoc": ["off"],
      "no-console": ["off"],
      "no-unused-vars": ["off"]
    },
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "webextensions": true
    },
    "globals": {
      "chrome": false,
      "Language": false,
      "Config": false
    }
  }
  